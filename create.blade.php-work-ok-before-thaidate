    <!-- JavaScript -->
    <script>
        // Function to convert Gregorian to Buddhist year (Thai year) with Thai month names
        function toThaiDate(dateString) {
            const date = new Date(dateString);
            const day = date.getDate();
            const month = date.getMonth();
            const year = date.getFullYear() + 543; // Convert to Buddhist year
            
            // Thai month names
            const thaiMonths = [
                'มกราคม', 'กุมภาพันธ์', 'มีนาคม', 'เมษายน', 
                'พฤษภาคม', 'มิถุนายน', 'กรกฎาคม', 'สิงหาคม',
                'กันยายน', 'ตุลาคม', 'พฤศจิกายน', 'ธันวาคม'
            ];
            
            return `${day} ${thaiMonths[month]} ${year}`;
        }

        // Update Thai date display when date changes
        document.getElementById('date-input').addEventListener('change', function() {
            const thaiDateDisplay = document.getElementById('thai-date-display');
            thaiDateDisplay.textContent = toThaiDate(this.value);
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.getElementById('date-input');
            const thaiDateDisplay = document.getElementById('thai-date-display');
            thaiDateDisplay.textContent = toThaiDate(dateInput.value);
        });

        // JavaScript for dynamic type dropdown
        document.getElementById('category-select').addEventListener('change', function() {
            const categoryId = this.value;
            const typeSelect = document.getElementById('type-select');
            
            // Clear existing options
            typeSelect.innerHTML = '<option value="">-- เลือกรายการ --</option>';
            
            if (categoryId) {
                // Fetch types for selected category
                fetch(`/api/categories/${categoryId}/types`)
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(types => {
                        types.forEach(type => {
                            const option = document.createElement('option');
                            option.value = type.id;
                            option.textContent = type.name_th;
                            typeSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error fetching types:', error);
                        typeSelect.innerHTML = '<option value="">Error loading types</option>';
                    });
            }
        });
    </script>
